<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, builder: BulmaFormBuilder::FormBuilder) do |f| %>
  <div class="columns">
    <div class="column is-one-quarter">

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Envoyer-moi les instructions", class: "button is-primary" %>
      </div>
    </div>
  </div>

<% end %>

