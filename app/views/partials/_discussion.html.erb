<article class="media">
    <figure class="media-left">
        <p class="image is-64x64">
            <%= image_tag local_assigns[:avatar] %>
        </p>
    </figure>

    <div class="media-content">
        <div class="content">
            <p>
                <strong><%= local_assigns[:name] %></strong> 
                <small><%= local_assigns[:timeago] %></small>
                <div class="content">
                    <%= local_assigns[:message] %>
                </div>
            </p>
        </div>
    </div>

    <div class="media-right">
        <button class="delete is-small"></button>
    </div>
</article>