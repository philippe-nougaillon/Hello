<nav class="navbar is-light" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">
      <img src="https://w7.pngwing.com/pngs/831/28/png-transparent-computer-icons-font-awesome-online-chat-font-beautiful-and-generous-miscellaneous-logo-conversation.png">
      LOGO
    </a>

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div><!-- /navbar-brand -->

  <div id="navbarBasicExample" class="navbar-menu">

    <div class="navbar-start">

      <%= link_to "Home", root_path, class: "navbar-item" %>

    </div><!-- /navbar-start -->

    <div class="navbar-end">
      <div class="navbar-item">
        <a class="navbar-item">
          <%= current_user.email if current_user %>
        </a>
        <div class="buttons">
          <% if (!user_signed_in?) %>
            <%= link_to "Sign Up",
                new_user_registration_path, 
                class: "button is-primary" 
            %>
            <%= link_to "Login", 
                new_user_session_path, 
                class: "button is-light" 
            %>
          <% else %>        
            <%= link_to "Log out", 
                destroy_user_session_path, 
                method: :delete, 
                class: "button is-light" 
            %>
          <% end %>
        </div><!-- /buttons -->
      </div><!-- /navbar-item -->
    </div><!-- /navbar-end -->

  </div><!-- /navbar-menu -->

</nav>

<script>
  $(document).ready(function() {

    // Check for click events on the navbar burger icon
    $(".navbar-burger").click(function() {

        // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
        $(".navbar-burger").toggleClass("is-active");
        $(".navbar-menu").toggleClass("is-active");

    });
  });
</script>
