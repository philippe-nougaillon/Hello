<div class="card">

    <header class="card-header">
        <div class="content">
            <p class="card-header-title">
                <%= groupe.activité.nom %></i>
            </p>
        </div>
    </header>

    <div class="card-image">
        <figure class="image is-4by3">
            <%= image_tag "#{groupe.activité.nom.downcase.gsub(' ', '-')}.jpg", loading: "lazy" %>
        </figure>
    </div>
    
    <% unless params[:groupe_id] %>
        <div class="card-content">
            <%= truncate groupe.nom, length: 25 %>
         </div>

        <footer class="card-footer">
            <p class="card-footer-item">
                <span>
                    <% unless groupe.users.size.zero? %>
                        <%= pluralize(groupe.users.size, 'membre', plural: 'membres') %>
                    <% end %>
                </span>
            </p>
            <p class="card-footer-item">
                <span>
                    <%= link_to "Voir plus...", pages_groupe_path(groupe_id: groupe.id), class: "card-footer-item" %>
                </span>
            </p>
        </footer>
    <% else %>
        <div class="card-content">
            <%= groupe.nom %>
         </div>
    <% end %>

</div>
