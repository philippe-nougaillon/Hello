<% @groupe.discussions.last(3).each_with_index do | discussion, index | %>
    <%= render "partials/discussion", 
                    name: discussion.user.email.split('@').first, 
                    avatar: "avatar#{discussion.user.id}.png", 
                    timeago: time_ago_in_words(discussion.created_at),
                    message: discussion.message %>
<% end %>

<%= bulma_form_with(url: discussions_create_path, local: true) do |form| %>
    <%= form.hidden_field :groupe_id, value: @groupe.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.text_field :message, required: true, autofocus: true %>

    <%= form.submit "Poster", class: "button is-primary" %>
<% end %>