<%= bulma_form_with(url: discussions_create_path, local: true) do |form| %>
    <%= form.hidden_field :groupe_id, value: @groupe.id %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.text_field :message, required: true %>
    <%= form.submit "Poster", class: "button is-primary" %>
<% end %>